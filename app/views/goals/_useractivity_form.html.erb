<div class="body">
<%= form_for ([current_user, @goal]) do |f| %>

  <% if @goal.errors.any? %>
    <div class = "error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @goal.errors.full_messages %>
          <li><div class="alert alert-danger"><b><center><%= message %></center></b></div></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "field">
    <%= f.label :activity_name %><br>
    <%= f.select :activity_id, options_from_collection_for_select(Activity.select('DISTINCT ON (name) *').all, :id, :name), include_blank: true %>
  </div>

  <div class = "field">
    <%= f.label :weekly_goal %><br>
    <%= f.number_field :weekly_goal %>
  </div>

  <div class = "action">
    <br>
    <%= f.submit 'Done!', :class => "btn btn-success"%> 
  </div>
<% end %>
</div>